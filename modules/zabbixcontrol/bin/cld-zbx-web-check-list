#!/bin/bash
source /var/cld/creds/creds_module_zabbixcontrol

# Authenticate with Zabbix API
authenticate() {
echo $(curl -k -s -H 'Content-Type: application/json-rpc' -d "{
  \"jsonrpc\": \"2.0\",
  \"method\": \"user.login\",
  \"params\": {
    \"user\": \"${ZABBIX_USER}\",
    \"password\": \"${ZABBIX_PASS}\"
  },
  \"auth\": null,
  \"id\": 0
}" "$API" | cut -d ':' -f 3 | cut -d ',' -f 1) | tr -d '"'
}

AUTH_TOKEN=$(authenticate)

JSON_ID_REQUEST=$(cat << EOL | jq .
{
    "jsonrpc": "2.0",
    "method": "host.get",
    "params": {
    "selectMacros": "extend"
    },
        "auth": "${AUTH_TOKEN}",
        "id": 1
}
EOL
)

# curl -k -s -H 'Content-Type: application/json-rpc' -d "${JSON_ID_REQUEST}" "$API" | jq '.result[] | select(.name|test("^check.")) | [.name,.macros[].value]' | tr -d '\n' | sed 's#\]\[#\n#g' | tr -d '['']''"'',' | awk '{print "`"$2" "$3" "$4"`"}'
curl -k -s -H 'Content-Type: application/json-rpc' -d "${JSON_ID_REQUEST}" "$API" | jq '.result[] | select(.name|test("^check.")) | [.name,.macros[].value]' | tr -d '\n' | sed -e 's#check ##g' -e 's#\]\[#\n\n\n#g' | tr ',' '\n' | tr -d '"''['']' | awk '{print "`"$1"`"}' | grep -A2 -B2 "$1" | tr '\n' '^' | sed 's#\^\^\^#^^#g' | tr '^' '\n'