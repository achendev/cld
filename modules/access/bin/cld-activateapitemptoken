#!/bin/bash
HELP_DESC=$(cat << 'EOL'
Add or update private IP of user to access list
Tool oriented to BOT and API interfaces
Arguments filling automatically by passing link after using /myip command at Telegram chat with bot
By this tool IP address of user detecting automatically from incoming get request
To add an IP address to access list via CLI - use cld-enableip
EOL
)
HELP_ARGS=$(cat << 'EOL'
$1                       IP address
$2                       Temporary token created by cld-myipbot tool used via /myip command at Telegram chat with bot
EOL
)
HELP_ONLY="API"
source /var/cld/bin/include/cldfuncs
[ "${FROM}" != "API" ] && cldhelp
mkdir -p /var/cld/modules/access/data/ &>/dev/null
TOKEN_SET=$(grep "${2}" /var/cld/modules/access/data/myip_tokens)
[ "$TOKEN_SET" ] || { echo 403 ; exit 1 ; }
TOKEN=$(cut -d _ -f 1 <<< ${TOKEN_SET})
USERID=$(cut -d _ -f 2 <<< ${TOKEN_SET})
USERNAME=$(cut -d _ -f 3 <<< ${TOKEN_SET})
IP=${1}
grep -q ${USERID} /var/cld/modules/access/data/myips \
&& { sed -i "s#.*${USERID}.*#${IP}_${USERID}_${USERNAME}_`TZ=Europe/Moscow date +%F-%H-%M`#g" /var/cld/modules/access/data/myips ; echo "private IP ${F}${IP}${F} successfully updated for user ${B}${USERNAME}${B}" ; } \
|| { echo "${IP}_${USERID}_${USERNAME}_`TZ=Europe/Moscow date +%F-%H-%M`" >> /var/cld/modules/access/data/myips ; echo "private IP ${F}${IP}${F} successfully added to access list for user ${B}${USERNAME}${B}" ; }
sed -i "/${TOKEN}/d" /var/cld/modules/access/data/myip_tokens
{ grep -v "^#\|^#" /var/cld/access/{users,groups}/*/clouds | cut -d _ -f 2 ; cat /var/cld/modules/access/data/{myips,enabledips} | cut -d _ -f 1 ; } | sort -u > /var/cld/api/accesslist 2>/dev/null
{ cat /var/cld/api/accesslist | uniq | awk '{print "acl localnet src "$1"/32"}' > /etc/squid/allow_hosts ; systemctl reload squid ; } &>/dev/null & disown
{ cat /var/cld/api/accesslist | sort -u | awk '{print "allow "$1"/32;"}' > /etc/nginx/accesslist && service nginx reload ; } &>/dev/null & disown
ps axfu | grep -v grep | grep -q "cld-accesslistdeploy" || bash -lc "/var/cld/modules/access/bin/cld-accesslistdeploy" &>/dev/null & disown
