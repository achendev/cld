#!/bin/bash
fqdntrue()
{
echo "Domain entered : $CHECKVAR"
DOMAIN_IP=$(ping $CHECKVAR | head -1 | cut -d '(' -f 2 | cut -d ')' -f 1)
reverse $DOMAIN_IP "IP not valid or domain could not be resolved."
}

fqdnfalse()
{
echo "IP entered : $1"
reverse $1 "IP not valid."
}

reverse() {
REVERSE=$(echo $1 |
sed -ne "s~^\([0-9]\{1,3\}\)\.\([0-9]\{1,3\}\)\.\([0-9]\{1,3\}\)\.\([0-9]\{1,3\}\)$~\4.\3.\2.\1~p")
[ "x${REVERSE}" = "x" ] && echoexit1 $2
}

blcheck() {
CHECKVAR=$1
[ "$CHECKVAR" ] || echoexit1 "Only ip or FQDN is allowed"
FQDN=$(echo $CHECKVAR | grep -P '(?=^.{5,254}$)(^(?:(?!\d+\.)[a-za-z0-9_\-]{1,63}\.?)+(?:[a-za-z]{2,})$)')
[ "$FQDN" ] && fqdntrue || fqdnfalse
blacklistchecker $CHECKVAR
}

blacklistchecker() {
REVERSE_DNS=$(dig +short -x $1)
echo $1 name ${REVERSE_DNS:----}
for bl in ${BLACKLISTS} ; do
printf "%-40s" " ${REVERSE}.${bl}."
LISTED="$(dig +short -t a ${REVERSE}.${bl}.)"
if [ "$LISTED" ]
then
[[ "$LISTED" =~ .*timed\ out.* ]] && echo "timed out" || echo "blacklisted (${LISTED})"
else
echo "not listed"
fi
done
}

echoexit1()
{
echo "${@:1}"
exit 1
}

